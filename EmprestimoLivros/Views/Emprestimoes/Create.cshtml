@model EmprestimoLivros.Models.Emprestimo

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Empréstimos</h1>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DtEmpretimo" class="control-label"></label>
                <input asp-for="DtEmpretimo" class="form-control" />
                <span asp-validation-for="DtEmpretimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtDevolucao" class="control-label"></label>
                <input asp-for="DtDevolucao" class="form-control" />
                <span asp-validation-for="DtDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label"></label>
                <select asp-for="LivroId" class ="form-control" asp-items="ViewBag.LivroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
